package com.company;
import java.util.Scanner;

public class Array {
    private int array[];

    public Array(){ array = null;} //might not need that
    private void nullCheck(){
        if (array == null){
            throw new NullPointerException();
        }
    }
    public void fillArray(){
        Scanner scan = new Scanner(System.in);
        System.out.println("Enter length of array:");

        int length = scan.nextInt();
        if (length < 0) { //do i need 0?
            throw new IllegalArgumentException("INVALID VALUE FOR ARRAY LENGTH");
        }

        array = new int[length];
        for (int i = 0; i < length; i++){
            System.out.println("Enter element [" + i + "] :");
            array[i] = scan.nextInt();
        }
    }
    public void printArray(){
        nullCheck();
        for (int elem: array)
            System.out.print(elem + " ");
        System.out.print('\n');
    }
    public int getSum(){
        nullCheck();
        int sum = 0;
        for (int i: array){
            sum += i;
        }
        return sum;
    }
    public int numOfEvenElem(){
        nullCheck();
        int even = 0;
        for (int i: array){
            if (i%2 == 0)
                even++;
        }
        return even;
    }
    public int numOfElemFromInterval(int a, int b){ //endpoints are included in the interval
        nullCheck();
        if (a > b){ //do i need this?
            int buff = a;
            a = b;
            b = buff;
        }
        int count = 0;
        for (int i: array){
            if (i >= a && i <= b)
                count++;
        }
        return count;
    }
    public boolean isEveryElemPositive(){
        nullCheck();
        boolean result = true;
        for (int i: array){
            if (i <= 0)
                result = false;
        }
        return result;
    }
    public void reverseOrder(){
        nullCheck();
        int buff, length = array.length;
        for (int i = 0; i < length/2; i++){
            buff = array[i];
            array[i] = array[length - 1 - i];
            array[length - 1 - i] = buff;
        }
    }

    public static void main(String args[]) {
        Array ar = new Array();
        ar.fillArray();
        int a,b;
        Scanner scan = new Scanner(System.in);
        System.out.println("Enter endpoints of interval: ");
        a = scan.nextInt();
        b = scan.nextInt();

        System.out.print("Array: ");
        ar.printArray();
        System.out.println("Sum of elements: " + ar.getSum());
        System.out.println("Even numbers: " + ar.numOfEvenElem());
        System.out.println("Number of elements belonging to [" + a + ", " + b + "]: " + ar.numOfElemFromInterval(a,b));
        System.out.println("Every element is positive: " + ar.isEveryElemPositive());
        ar.reverseOrder();
        System.out.print("Reversed array: ");
        ar.printArray();
    }
}

